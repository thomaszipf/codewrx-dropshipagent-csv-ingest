# Production Environment Variables
# Copy to .env and update with your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# Domain Configuration
DOMAIN=srv940901.hstgr.cloud
EMAIL=admin@dropshipagent.com

# FTP Configuration (if using external FTP)
FTP_HOST=srv940901.hstgr.cloud
FTP_PORT=21
FTP_USER=ftpuser
FTP_PASS=ftppassword

# Basic Auth (generate with: htpasswd -c .htpasswd username)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=your_secure_password_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring
HEALTH_CHECK_INTERVAL=30
LOG_LEVEL=info
MAX_LOG_SIZE=100M
MAX_LOG_FILES=10